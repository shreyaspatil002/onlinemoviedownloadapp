  style
    |  div { font-family: "Times New Roman"; max-width: 500px; margin: auto; } 
  div
  -if user_signed_in?  
    tr
      td
        = product.name
      td
        
        = product.code
      td
      
        = image_tag product.cover_image, width: '150' if product.cover_image.attached?
    
      td
        = link_to "Show", product_path(product) , class: "btn btn-outline-primary"
      td  
        - if policy(product).update?
          = link_to "Edit" , edit_product_path(product) , class:"btn btn-warning"
         
      td 
        = link_to "Download", download_pdf_product_path(product) , class: "btn btn-success"
         
      td
        - if policy(product).destroy?
          = link_to "Delete", product_path(product),method: :delete, data: {confirm: 'Are you sure?'} ,class:"btn btn-danger"
     
  - else
    tr
      td
        = product.name
        |  &emsp; &emsp;&emsp; 
      td
        
        = product.code
        |  &emsp; &emsp;&emsp; 
      td
      
        = image_tag product.cover_image, width: '150' if product.cover_image.attached?
    
